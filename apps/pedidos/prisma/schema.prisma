generator client {
  provider = "prisma-client-js"
  output = "../../../node_modules/.prisma/client/PEDIDOS"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:root123@mysql:3306/PEDIDOS"
}

model Pedidos {
  id Int @id @default(autoincrement())
  nome String
  preco Int
  descricao String
  createAt DateTime @default(now())
  updatedAt DateTime @default(now())
  cliente Clientes? @relation(fields: [clienteId], references: [id])
  clienteId Int?
  status StatusPedido
}


model Clientes {
  id Int @id @default(autoincrement())
  nome String
  numero String @unique
  email String @unique
  pedidos Pedidos[]
}


enum StatusPedido {
  PENDENTE 
  PAGO
  CANCELADO
}